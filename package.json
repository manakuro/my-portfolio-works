{
  "name": "my-portfolio-works",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@researchgate/react-intersection-observer": "^0.6.1",
    "animate.css": "^3.6.1",
    "classnames": "^2.2.5",
    "font-awesome": "^4.7.0",
    "github-markdown-css": "^2.10.0",
    "history": "^4.7.2",
    "loadable-components": "^2.1.0",
    "react": "^16.3.2",
    "react-animated-css": "^1.0.4",
    "react-anime": "^2.1.0",
    "react-canvas": "^1.3.0",
    "react-dom": "^16.3.2",
    "react-id-swiper": "^1.6.2",
    "react-markdown": "^3.3.0",
    "react-redux": "^5.0.7",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-scripts-ts": "2.15.1",
    "react-show": "^2.0.4",
    "react-transition-group": "^2.3.1",
    "recompose": "^0.27.0",
    "redux": "^4.0.0",
    "sanitize.css": "^5.0.0"
  },
  "scripts": {
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm-run-all build-css build-js",
    "start-js": "react-scripts-ts start",
    "build-js": "react-scripts-ts build",
    "build-css":
      "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css":
      "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "precommit": "lint-staged",
    "commit": "git-cz"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --no-semi --trailing-comma all --write",
      "eslint --fix",
      "git add"
    ],
    "*.tsx": [
      "prettier --single-quote --no-semi --trailing-comma all --write",
      "tslint --fix",
      "git add"
    ],
    "*.graphql": ["prettier --write", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "devDependencies": {
    "@types/classnames": "^2.2.3",
    "@types/history": "^4.6.2",
    "@types/jest": "^22.2.3",
    "@types/node": "^10.0.3",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "@types/react-redux": "^5.0.19",
    "@types/react-router-redux": "^5.0.13",
    "@types/react-transition-group": "^2.0.9",
    "@types/recompose": "^0.26.1",
    "babel-eslint": "^8.2.3",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.5",
    "node-sass-chokidar": "^1.2.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.12.1",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
